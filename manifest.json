{
  "manifest_version": 3,
  "name": "oh my eyes",
  "version": "0.0.1",
  "description": "A Chrome Extension built with Vite, React, and TypeScript.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logoOME.png",
      "32": "logoOME.png",
      "48": "logoOME.png",
      "128": "logoOME.png"
    }
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "src/configUI/configUI.html",
    "open_in_tab": true
  }
}
